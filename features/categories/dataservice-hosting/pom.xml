<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.data</groupId>
        <artifactId>feature-categories</artifactId>
        <version>4.4.59-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.dataservices-hosting.category.feature</artifactId>
    <packaging>pom</packaging>
    <name>Data Services Server Hosting ${project.version}</name>
    <url>http://wso2.org</url>
    <description>Includes data services hosting features.</description>
 
    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>1-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.dataservices-hosting.category</id>
                            <propertiesFile>../../etc/feature.properties</propertiesFile>
                            <adviceFile>
                                <properties>
                                    <propertyDef>org.eclipse.equinox.p2.type.category:true</propertyDef>
                                    <propertyDef>org.wso2.carbon.p2.category.type:composite</propertyDef>
                                    <propertyDef>org.wso2.carbon.p2.category.property:true</propertyDef>
                                </properties>
                            </adviceFile>
                            <importFeatures>
                                <importFeatureDef>org.wso2.carbon.dataservices:${dataservices.version}</importFeatureDef>
                                <!--<importFeatureDef>org.wso2.carbon.ndatasource.ui:4.4.3</importFeatureDef>-->
                                <!--<importFeatureDef>org.wso2.carbon.ndatasource:4.4.3</importFeatureDef>-->
                                <importFeatureDef>org.wso2.carbon.dataservices.task:${dataservices.version}</importFeatureDef>
                                <importFeatureDef>org.wso2.carbon.cassandra-jdbc-1.2.5.server:${dataservices.version}</importFeatureDef>
                            </importFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
